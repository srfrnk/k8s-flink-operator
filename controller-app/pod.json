{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "labels": {
            "version": "imageVersion"
        },
        "name": "jobName"
    },
    "spec": {
        "containers": [
            {
                "command": [
                    "/app/start.sh"
                ],
                "env": [],
                "image": "srfrnk/flink-job-app:imageVersion",
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/app/check.sh"
                        ]
                    },
                    "initialDelaySeconds": 60,
                    "periodSeconds": 10
                },
                "name": "job",
                "ports": [
                    {
                        "containerPort": 80
                    }
                ],
                "resources": {
                    "limits": {
                        "cpu": "100m",
                        "memory": "500Mi"
                    },
                    "requests": {
                        "cpu": "10m",
                        "memory": "10Mi"
                    }
                },
                "volumeMounts": [
                    {
                        "name": "jar",
                        "mountPath": "/jar"
                    }
                ]
            },
            {
                "image": "jarImage",
                "command": [
                    "/app/start.sh"
                ],
                "env": [],
                "name": "jar",
                "resources": {
                    "limits": {
                        "cpu": "1m",
                        "memory": "100Mi"
                    },
                    "requests": {
                        "cpu": "1m",
                        "memory": "10Mi"
                    }
                },
                "volumeMounts": [
                    {
                        "name": "jar-start",
                        "mountPath": "/app"
                    },
                    {
                        "name": "jar",
                        "mountPath": "/jar"
                    }
                ]
            }
        ],
        "terminationGracePeriodSeconds": 60,
        "volumes": [
            {
                "name": "jar-start",
                "configMap": {
                    "name": "flink-job-jar",
                    "defaultMode": 484
                }
            },
            {
                "name": "jar",
                "emptyDir": {}
            }
        ]
    }
}