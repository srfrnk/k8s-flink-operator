{
    "apiVersion": "apps/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "name": "flink-controller",
        "namespace": "flink"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "flink-controller"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "flink-controller"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "controller",
                        "image": "node",
                        "command": [
                            "bash",
                            "-c",
                            "mkdir /app && cd /app && cp -a /src/. /app/ && npm i && npm start"
                        ],
                        "volumeMounts": [
                            {
                                "name": "src",
                                "mountPath": "/src"
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 80
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "src",
                        "configMap": {
                            "name": "flink-controller"
                        }
                    }
                ]
            }
        }
    }
}